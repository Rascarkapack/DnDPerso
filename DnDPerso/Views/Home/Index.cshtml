@model DnDPersoEntities.CharacterData

@Scripts.Render("~/bundles/Scripts/Views/Home")

@{
    ViewBag.Title = "Home Page";
}

<div id="header">
    <a href="/Pouvoir/Index">Liste pouvoirs</a>
    <img id="logo_header" src="~/Images/logo_header.png" alt=""/>
    <div id="account">
        <span id="account_name">pygma</span><br/>
        <a id="logout">Déconnexion</a>
    </div>
    <div><input type="button" class="btn btn_DnD" onclick="SaveCharacterSheet()" value="Enregistrer"/>
    </div>
</div>
@Html.HiddenFor(model => model.Id, new { @class = "", id = "input_characterId" })
<div id="mainBloc_1" class="mainBloc">
    <div class="col-md-10">
        <div class="input_bloc width200">
            @Html.TextBoxFor(model => model.Nom, "", new { @class = "", id = "input_characterName" })
            <span class="input_libelle">Nom du personnage</span>
        </div>
        <div class="input_bloc width75">
            @Html.TextBoxFor(model => model.Niveau, "", new { @class = "", id = "input_characterLevel" })
            <span class="input_libelle">Niveau</span>
        </div>
        <div class="input_bloc width150">
            @Html.DropDownListFor(a=>a.IdClasse, Model.Classes)
            <span class="input_libelle">Classe</span>
        </div>
        <div class="input_bloc width75">
            @Html.TextBoxFor(model => model.Experience, "", new { @class = "", id = "input_characterExperience" })
            <span class="input_libelle">Total de px</span>
        </div>
        <div class="input_bloc width150">
            @Html.DropDownListFor(a => a.IdRace, Model.Races)
            <span class="input_libelle">Race</span>
        </div>
        <div class="input_bloc width150">
            @Html.TextBoxFor(model => model.CategorieTaille, "", new { @class = "", id = "input_characterHeightCategorie" })
            <span class="input_libelle">Catégorie de taille</span>
        </div>
        <div class="input_bloc width50">
            @Html.TextBoxFor(model => model.Age, "", new { @class = "", id = "input_characterAge" })
            <span class="input_libelle">Âge</span>
        </div>
        <div class="input_bloc width50">
            @Html.TextBoxFor(model => model.Sexe, "", new { @class = "", id = "input_characterSexe" })
            <span class="input_libelle">Sexe</span>
        </div>
        <div class="input_bloc width50">
            @Html.TextBoxFor(model => model.Taille, "", new { @class = "", id = "input_characterHeight" })
            <span class="input_libelle">Taille</span>
        </div>
        <div class="input_bloc width50">
            @Html.TextBoxFor(model => model.Poids, "", new { @class = "", id = "input_characterWeight" })
            <span class="input_libelle">Poids</span>
        </div>
        <div class="input_bloc width200">
            @Html.TextBoxFor(model => model.GroupeAventurier, "", new { @class = "", id = "input_characterGroup" })
            <span class="input_libelle">Groupe d'aventuriers</span>
        </div>
        <div class="input_bloc width150">
            @Html.DropDownListFor(a => a.IdAlignement, Model.Alignements)
            <span class="input_libelle">Alignement</span>
        </div>
        <div class="input_bloc width150">
            @Html.DropDownListFor(a => a.IdDivinite, Model.Divinites)
            <span class="input_libelle">Divinité</span>
        </div>
        <div class="input_bloc input_text">
            @Html.TextBoxFor(model => model.Personnalite, "", new { @class = "", id = "input_characterPersonnalite" })
            <span class="input_libelle">Personnalité</span>
        </div>
    </div>
    <div class="col-md-2">
        <div id="character_picture"><img src="~/Images/blank_picture.jpg" alt="" /></div>
    </div>
</div>
