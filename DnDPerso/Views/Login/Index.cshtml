@model DnDPersoEntities.Utilisateur

@Scripts.Render("~/bundles/Scripts/Views/Login")

@{
    ViewBag.Title = "Index";
}

<div id="contentAuthBloc">
    <img src="~/Images/logo_header.png" alt="" />
    <div class="contentAuthSeparator"></div>
    <div id="contentAuthIdBloc">
        <input type="text" placeholder="Identifiant" id="authFormLogin" />
    </div>
    <div class="contentAuthSeparator"></div>
    <div id="contentAuthPasswordBloc">
        <input type="password" placeholder="Mot de passe" id="authFormPassword" />
    </div>
    <div class="contentAuthSeparator"></div>
    <div id="contentAuthConnexionBloc">
        <input type="button" class="btn btn-danger" name="Connexion" value="Connexion" id="loginAuthConnexion" onclick="loginAuth()" />
    </div>
</div>